    <script>
        async function loadCard() {
            const params = new URLSearchParams(window.location.search);
            const cardID = params.get("id");

            if (!cardID) {
                document.body.innerHTML = "<h1>No card ID provided.</h1>";
                return;
            }

            // Fetch card using backend
            const response = await fetch("http://localhost:5000/search", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ id: cardID })
            });

            const result = await response.json();
            const card = result.results[0];

            if (!card) {
                document.body.innerHTML = "<h1>Card not found.</h1>";
                return;
            }

            // Fill the page
            document.getElementById("cardName").textContent = card.name ?? "";

            const fields = [
                "hp","id","subtypes","release_date","artist","set_num","level",
                "types","generation","evolvesTo","supertype","convertedRetreatCost",
                "rarity","set","series","publisher","evolvesFrom","weaknesses",
                "nationalPokedexNumbers","legalities","resistances",
                "regulationMark","ancientTrait"
            ];

            fields.forEach(f => {
                const elem = document.getElementById(f);
                if (elem) elem.textContent = card[f] ?? "";
            });

            document.getElementById("attacks").textContent = card.attacks ?? "";
            document.getElementById("flavorText").textContent = card.flavorText ?? "";
            document.getElementById("rules").textContent = card.rules ?? "";
            document.getElementById("abilities").textContent = card.abilities ?? "";
        }

        loadCard();
    </script>
